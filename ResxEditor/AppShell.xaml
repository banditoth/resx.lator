<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ResxEditor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ResxEditor.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Editor"
        ContentTemplate="{DataTemplate views:ResourceEditorView}"
        Route="MainPage" />

    <ShellContent
        Title="Translator chooser"
        ContentTemplate="{DataTemplate views:TranslatorChooserView}"
        Route="ChooseTranslator" />

    <ShellContent
        Title="Configure DeepL"
        ContentTemplate="{DataTemplate views:DeepLConfigurationView}"
        Route="DeepLSettings" />

</Shell>
